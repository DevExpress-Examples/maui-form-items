<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FormItemExample"
             xmlns:dxcv="clr-namespace:DevExpress.Maui.CollectionView;assembly=DevExpress.Maui.CollectionView"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             Title="Select Language"
             x:Class="FormItemExample.SelectLanguagePage">
    <VerticalStackLayout>
        <dxcv:DXCollectionView ItemsSource="{Binding Languages}" SelectedItem="{Binding Language}" SelectionChanged="OnCollectionViewSelectionChanged" SelectionMode="Single" />
    </VerticalStackLayout>
</ContentPage>