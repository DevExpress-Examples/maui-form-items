<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FormItemExample"
             xmlns:dxcv="clr-namespace:DevExpress.Maui.CollectionView;assembly=DevExpress.Maui.CollectionView"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             Title="Contact Blacklist"
             x:Class="FormItemExample.BlacklistPage">
    <VerticalStackLayout>
        <dxcv:DXCollectionView ItemsSource="{Binding Contacts}" SelectedItems="{Binding Blacklist}" SelectionMode="Multiple" />
    </VerticalStackLayout>
</ContentPage>